        "lineHeight": { "value": "{typography.lineHeights.relaxed}" },
        "description": "Heading 4 style"
      },
      "h5": {
        "fontFamily": { "value": "{typography.fontFamilies.primary}" },
        "fontSize": { "value": "{typography.fontSizes.xl}" },
        "fontWeight": { "value": "{typography.fontWeights.bold}" },
        "lineHeight": { "value": "{typography.lineHeights.relaxed}" },
        "description": "Heading 5 style"
      },
      "h6": {
        "fontFamily": { "value": "{typography.fontFamilies.primary}" },
