{
  "$schema": "https://schemas.opendesignsystems.org/token/v1.0.0",
  "typography": {
    "fontFamilies": {
      "primary": {
        "value": "Lato, sans-serif, Helvetica, Arial",
        "type": "fontFamily",
        "description": "Primary font family for body text and UI"
      },
      "fallback": {
        "value": "Arial, sans-serif",
        "type": "fontFamily",
        "description": "Fallback font family"
      }
    },
    "fontWeights": {
      "regular": { "value": "400", "type": "fontWeight", "description": "Regular font weight" },
      "bold": { "value": "700", "type": "fontWeight", "description": "Bold font weight" }
    },
    "fontSizes": {
      "xs": { "value": "12px", "type": "dimension", "description": "Extra small text" },
      "sm": { "value": "14px", "type": "dimension", "description": "Small text" },
      "base": { "value": "16px", "type": "dimension", "description": "Base/body text" },
      "lg": { "value": "18px", "type": "dimension", "description": "Large text" },
      "xl": { "value": "20px", "type": "dimension", "description": "Extra large text" },
      "2xl": { "value": "24px", "type": "dimension", "description": "2X large text" },
      "3xl": { "value": "30px", "type": "dimension", "description": "3X large text" },
      "4xl": { "value": "36px", "type": "dimension", "description": "4X large text" },
      "5xl": { "value": "48px", "type": "dimension", "description": "5X large text" }
